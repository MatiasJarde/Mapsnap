<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10px"
    tools:context=".CreateStoryActivity">

    <Button
        android:id="@+id/buttonSaveStory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save a Story"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textSaveStory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="This is sample text for stoory This is sample text for stooryThis is sample text for stooryThis is sample text for stoory"
        app:layout_constraintBottom_toTopOf="@+id/buttonSaveStory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDisplayView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageDisplayView"
        android:layout_width="407dp"
        android:layout_height="442dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
</androidx.constraintlayout.widget.ConstraintLayout>